.row {
    margin: 12px;
}
.vertical-centrar{
    display: flex;
    align-items: center;
}

.title-primary{
    font-size: 14px;
    color: #272727;
    font-weight: 600;
}
.box-contents{
    border-style: solid;
    border-radius: 24px;
    border-width: 1px;
    margin-bottom: 12px; 
    background: #DBE4F0;
}
#qr >>> .qrcode img{
    border-radius: 12px;
    width 100px;
}
.hide-content{
    z-index: 999999 !important;
    background: #d5d1d08f;
}
.disabled-input{
    z-index: -2 !important;
}
.checkbox-section {
  display: flex;
  align-content: center;
  align-items: center;
  height: 60px;
}

.checkbox-margin {
  margin: 0 10px;
}
.title-state{
    color: black;
    font-size: 16px;
    font-weight: 600;
}
.state {
    color: grey;
    font-size: 16px;
    font-weight: 600;
}
.content-state {
    text-align: center;
    margin: 24px;
}

@media only screen and (max-width: 1280px) {
    .box{
        width: 168px;
    }
}
