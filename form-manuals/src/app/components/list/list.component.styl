/* Structure */
.box-list {
  margin: 16px;
}

a {
  color: white;
}

a:hover {
    color: #ffffff;
    text-decoration: none;
}

table {
  width: 100%;
}

.mat-form-field {
  font-size: 14px;
  width: 100%;
}

.mat-header-cell {
  color: black;
  font-weight: 600;
  font-size: 16px;
}

td.mat-cell, td.mat-footer-cell, th.mat-header-cell {
  text-align: center;
}

.items {
  color: #474545;
  font-size: 14px;
  font-weight: 400;
}

.new-form {
  position: relative;
  left: 136px;
}

.mat-header-cell {
  padding-right: 10px;
  padding-left: 10px;
}
.mat-cell {
  padding-right: 10px;
  padding-left: 10px;
}

.mat-sort-header-container {
  align-items: center;
}

.mat-form-field-appearance-legacy .mat-form-field-underline {
    height: 1px;
    display: none;
}
#no-underline >>> .mat-form-field-wrapper .mat-form-field-underline {
  display: none;
}
